# Load this file with
# . pylonvars
# to configure the Pylon driver
#

export PYLON_ROOT=/exports/development/pylon
export GENICAM_ROOT_V2_1=$PYLON_ROOT/genicam
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH${LD_LIBRARY_PATH:+:}$PYLON_ROOT/lib64:$PYLON_ROOT/genicam/bin/Linux64_x64

: <<'EOF'
To configure the Pylon environment in Emacs, type C-x C-e just after the last closing brace.

(progn
  (setenv "PYLON_ROOT" "/exports/development/pylon")
  (setenv "GENICAM_ROOT_V2_1" "/exports/development/pylon/genicam")
  (setenv "LD_LIBRARY_PATH" (concat (getenv "LD_LIBRARY_PATH") ":"
    (getenv "PYLON_ROOT") "/lib64:" (getenv "GENICAM_ROOT_V2_1") "/bin/Linux64_x64")))
EOF
